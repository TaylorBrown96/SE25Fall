{% extends "default/module.html.jinja2" %}

{# Determine if this is the root package page (proj2.html) #}
{% set is_root = (module.name == "proj2") %}

{# Load CSS globally #}
{% block style %}
  {{ super() }}
  <style>{% include "assets/custom.css" %}</style>
{% endblock %}

{# Only show the header/backlink on the main proj2.html page #}
{% block nav_title %}
  {{ super() }}
  {% if is_root %}
    <a href="./index.html" style="margin-left:1rem; font-weight:500;">← Overview</a>
  {% endif %}
{% endblock %}

{# Only show the footer on the main proj2.html page #}
{% block content %}
  {{ super() }}
  {% if is_root %}
    <footer class="pdoc" style="margin-top:2rem;">
      <hr>
      <p><a href="./index.html">← Back to Overview & Guides</a></p>
    </footer>
  {% endif %}
{% endblock %}
